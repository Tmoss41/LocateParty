<div> 
    <% @profiles.each do |profile| %>
    <div>
        <p>Name: <%= link_to profile.full_name_to_csv, profile_path(profile.user) %></p>
        <p>Suburb: <%= profile.suburb %></p>
        <%= link_to 'Invite',  user_groups_path(user_id: profile.user.id, group_id: params[:id], player_approval: false, approved: true), method: :post %>
    </div>
    <% end %>
    <% if !@profiles.present? %>
        <div>No Players Match that Criteria</div>
    <%end %>
</div>