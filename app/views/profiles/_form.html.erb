<%= form_with model: @profile do |f| %>
    <div class="mb-3">
        <p><%= f.label :first_name ,class: 'form-label'%>: 
        <%= f.text_field :first_name , class: 'form-control' %></p>
    </div>
    <div class="mb-3">
        <%= f.label :last_name ,class: 'form-label'%>
        <%= f.text_field :last_name ,class: 'form-control'%>
    </div>
    <div class="mb-3">
        <%= f.label :bio ,class: 'form-label'%>
        <%= f.text_field :bio , class: 'form-control' %>
    </div>
    <div class="mb-3">
        <%= f.label :mobile ,class: 'form-label'%>
        <%= f.text_field :mobile , class: 'form-control' %>
    </div>
    <div class="mb-3">
        <%= f.fields_for :location do |location| %>
        <div class="mb-3">
            <%= location.label :suburb ,class: 'form-label'%>  
            <%= location.text_field :suburb , class: 'form-control' %>
        </div>
        <div class="mb-3">
            <%= location.label :state ,class: 'form-label'%>
            <%= location.text_field :state , class: 'form-control' %>
        </div>
        <div class="mb-3">
            <%= location.label :postcode ,class: 'form-label'%>
            <%= location.number_field :post_code, class: 'form-control' %>
        </div>
        <div class="mb-3">
        <% end %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.file_field :avatar %>
        <br>
        <br>
        <%= f.submit class: 'btn btn-dark' %>
<% end %>
