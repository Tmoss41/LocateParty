<h1><%= @group.name%></h1>

<h2>Members</h2>
<%= @group.suburb %>
<%= @group.state %>
<% @group.approved_users.each do |user| %>
    <%= user.email%>
    <% if @groupadmin %>
        <%= link_to 'Delete', delete_member_path(group_id: @group.id, user_id: user.id), method: :delete %>
    <% end %>
<% end %>
<% case @group.users.where('email = ?', "#{current_user.email}").exists? %>
<% when false %>
    <%= link_to 'Join',  user_groups_path(user_id: current_user.id, group_id: session[:current_group]), method: :post %>
<% when true %>
<% end %>