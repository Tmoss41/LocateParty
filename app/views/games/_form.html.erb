<article class="form">
    <%= form_with model: @game do |f| %>
    <div class="mb-3">
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="mb-3">
        <%= f.label :date, class: 'form-label'%>
        <%= f.date_field :date, class: 'form-control' %>
    </div>
    <div class="mb-3">
        <%= f.label :time, class: 'form-label' %>
        <%= f.time_field :time, class: 'form-control' %>
    </div>
    <%= f.submit class: 'btn btn-dark' %>
    <% end %>
</article>